<%- include('./header')-%>

<div class="container py-5">
    <div class="row text-center text-white mb-5">
        <div class="col-lg-7 mx-auto">
            <h1 class="display-4">Lista de Productos</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-8 mx-auto">
            <a href="/web"><button class="addProd">Agregar Productos</button></a>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <!-- List group-->
            <ul class="list-group shadow">
                <!-- list group item-->

                <% if (products) { %>
                    <% products.forEach(function(producto){ %>

                <li class="list-group-item">
                    <!-- Custom content-->
                    <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                        <div class="media-body order-2 order-lg-1">
                            <h2 class="mt-0 font-weight-bold mb-2"><%= producto.name %></h2>
                            <!-- {{!-- <p class="font-italic text-muted mb-0 small">128 GB ROM | 15.49 cm (6.1 inch) Display 12MP Rear Camera | 7MP Front Camera A12 Bionic Chip Processor</p> --}} -->
                            <div class="d-flex align-items-center justify-content-between mt-1">
                                <h3 class="font-weight-bold my-2 text-center">$$ <%= producto.precio %></h3>
                                <ul class="list-inline small">
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                    <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                                </ul>
                            </div>
                        </div><img src="<%= producto.thumbnail %>" alt="Generic placeholder image" width="200" class="ml-lg-5 order-1 order-lg-2">
                    </div> <!-- End -->
                </li> <!-- End -->
                
                <% }); %> 
                <% } else{ %>  
                      <p class="text-light">No se encontraron productos</p>  
                      
                      <% } %>
                
                
            </ul> <!-- End -->
        </div>
    </div>
</div>
